{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
    <div class="card">
        <form class="profile-form" action="#" method="POST" enctype="multipart/form-data">
            <div class="profile-grid">
                <div class="profile-avatar-column">
                    <h3 class="column-title">Profile photo</h3>
                    <div class="avatar-uploader">
                        <div class="current-avatar">
                            <img src="https://i.pravatar.cc/150?u=jankowalski" alt="Current avatar">
                        </div>
                        <input type="file" id="avatar-upload" name="avatar" accept="image/png, image/jpeg">
                        <label for="avatar-upload" class="btn btn-secondary">Change photo</label>
                        <p class="form-text">JPG, PNG or GIF. Max size: 2MB.</p>
                    </div>
                </div>

                <div class="profile-form-column">
                    <h3 class="column-title">Personal data</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstname">Firstname</label>
                            <input type="text" id="firstname" name="firstname" class="form-control" value="{{ app.user.firstname }}">
                        </div>
                        <div class="form-group">
                            <label for="lastname">Lastname</label>
                            <input type="text" id="lastname" name="lastname" class="form-control" value="{{ app.user.lastname }}">
                        </div>
                    </div>

                    <h3 class="column-title">Locales</h3>
                    <div class="form-group">
                        <label for="locale">Language</label>
                        <select id="locale" name="locale" class="form-control">
                            <option value="pl_PL" selected>Polski (pl_PL)</option>
                            <option value="en_US">English (en_US)</option>
                            <option value="de_DE">Deutsch (de_DE)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="timezone">Timezone</label>
                        <select id="timezone" name="timezone" class="form-control">
                            <option value="Europe/Warsaw" selected>Europa/Warszawa</option>
                            <option value="Europe/London">Europa/Londyn</option>
                            <option value="Europe/Paris">Europa/Pary≈º</option>
                            <option value="America/New_York">Ameryka/Nowy Jork</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="#" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
