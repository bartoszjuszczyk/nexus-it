{% extends 'emails/_layout.html.twig' %}

{% block content %}
    <p>Hello {{ assigneeName }},</p>
    <p>
        New ticket has been assigned to you:
        <br><em>"{{ ticketTitle }}"</em> (#{{ ticketId }})
    </p>
    <p>
        Ticket has been assigned by: <strong>{{ eventAuthorName }}</strong>.
    </p>
    <p style="text-align: center; margin-top: 30px;">
        <a href="{{ url('app_ticket_view', {id: ticketId}) }}" class="button" style="background-color: #007bff;">
            Go to ticket
        </a>
    </p>
{% endblock %}
