<div class="flash-container">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ type }}" role="alert" data-controller="flash-message">
                <div class="flash-icon">
                    {% if type == 'success' %}
                        <i class="fa-solid fa-check-circle"></i>
                    {% elseif type == 'error' %}
                        <i class="fa-solid fa-times-circle"></i>
                    {% else %}
                        <i class="fa-solid fa-info-circle"></i>
                    {% endif %}
                </div>
                <div class="flash-content">
                    {{ message }}
                </div>
                <button type="button" class="flash-close" aria-label="Close" data-action="click->flash-message#close">
                    &times;
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
